<%= react_component('Navbar', {current_user: current_user}) %>


<form class="form-signin" accept-charset="UTF-8" action="/login" method="POST">
      
      <div class="text-center mb-4">

        <img src="<%= asset_path('signup.jpg') %>" 
>
        <h1 class="h3 mb-3 font-weight-normal">Let's find you drivers from the community!</h1>
      </div>

        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      
      <div class="inputs text-center mb-4"> 
      
        <div class="form-label-group">
          <label for="inputEmail">Email</label>
          <%= text_field_tag :email %>
        </div>

        <div class="form-label-group pass">
          <label for="inputPassword">Password </label>
          <%= password_field_tag :password %>
        </div>

        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        
      <button class="btn btn-lg btn-primary" type="submit">Login</button>
      </div>
    </form>
