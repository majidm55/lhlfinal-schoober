
    <% @drivertrips.each do |drivertrip| %>
    <tr >
        <% drivername = User.find_by(id: drivertrip.user_id)%>

        <td>    
            <img src="<%= drivername.user_pic %>" />
        </td>
        <td>    
            <%= drivername.first_name %>
        </td>
        <td>    
            <%= drivername.last_name %>
        </td>
        
        <td>    
            <%= drivertrip.start_point%>
        </td>
        <td>
            <%= drivertrip.end_point %>
        </td>
        <td>
            <%= drivertrip.trip_date%>
        </td>
        <td>
            <%= drivertrip.time_slot%>
        </td>
        <td>
            <%= drivertrip.spots_available%>
        </td>
        <td>
         <%= button_to 'Add Driver', {:controller => "matchedtrips", :action => "create", :matchedtrip=> {:start_point=> drivertrip.start_point, :end_point=>drivertrip.end_point, :trip_date => drivertrip.trip_date, :time_slot => drivertrip.time_slot, :spots_reserved=>@parenttrips.spots_required, :parent_trip_id => @parenttrips.id, :driver_trip_id => drivertrip.id, :user_id => @user.id}} , :method=>:post  %>   
        </td>

    </tr>

    <% end %>


