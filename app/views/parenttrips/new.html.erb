<%= react_component('Navbar', {current_user: current_user}) %>

            <h1>Parent Trip Planner</h1>

<%= form_for :parenttrip, url: '/parenttrips' do |form| %>

                Start Location:
                <p><%= form.text_field :start_point %></p>

                End Location:
                <p> <%= form.select :end_point, ['21451 Avenue Rd, North York, ON', '2365 Bayview Ave, North York, ON', '220 Lonsdale Rd, Toronto, ON', '371 Bloor St W, Toronto, ON']%></p>

                Date:
                <p><%= form.date_field :trip_date %></p>

                Time Slot:
                <p> <%= form.select :time_slot, ['07:00 AM - 08:00 AM', '03:00 PM - 04:00 PM']%></p>

                <%= form.hidden_field :user_id, :value => session[:user_id] %>

    
                Spots Required:
                <p><%= form.number_field :spots_required %></p>
                
                
                <%= form.submit "Submit" %>

<% end %>

<%= render 'googlemaps'%>
